        android:text=" Check Pressure"
        android:id="@+id/btn_group"
        android:textColor="#ff353535"
        android:background="#ffff7e67"
        android:textSize="18dp"
        android:layout_below="@+id/editBottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/viewGroup"
        android:layout_below="@+id/editBottom"
        android:layout_toRightOf="@+id/btn_group"
        android:layout_alignBottom="@+id/btn_group"
        android:layout_alignRight="@+id/editBottom"
        android:layout_alignEnd="@+id/editBottom"
        android:background="#ffffffff"
        android:textColor="#ff343434"
        android:textSize="22dp"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingLeft="80dp"
        android:layout_alignParentStart="false" />


