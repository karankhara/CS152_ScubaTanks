    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editDepth"
        android:singleLine="true"
        android:hint="Enter depth"
        android:linksClickable="false"
        android:inputType="number"
        android:textSize="22dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_alignRight="@+id/btn_next"
        android:layout_alignEnd="@+id/btn_next" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editBottom"
        android:singleLine="true"
        android:textSize="22dp"
        android:inputType="time"
        android:hint="Enter bottom time"
        android:layout_below="@+id/editDepth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btn_next"
        android:background="#ffff7e67"
        android:textColor="#ff353535"
        android:textSize="18dp"
        android:layout_below="@+id/btn_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
